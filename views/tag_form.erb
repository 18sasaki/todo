<form action=<%= @form_action %> class="form-inline" method="POST">
  <span class="btn" style='background-color:<%= @tag_style.color %>;cursor:default'><%= @tag_style.name %></span>
  <input type="text" placeholder="Tag name" name="name" style='width:200px' value=<%= @tag ? @tag.name : '' %>>
  <input type="hidden" name="tag_style_id" value=<%= @tag_style.id %>>

  <button type="submit" class="btn">Post</button>
</form>

<ul>
  <% @tag_style.tags.each do |tag| %>
    <li><%= tag.name %></li>
  <% end %>
</ui>
