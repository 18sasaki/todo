<a href="/tag/post" class="btn btn-primary">Add tag</a>
<hr>
<% @tags.each do |tag_style, tag_list| %>
  <span class="btn" style='background-color:<%= tag_style.color %>;cursor:default'><%= tag_style.name %></span>
  <ul id="todo-list" class="unstyled">
    <% tag_list.each do |tag| %>
      <li id="<%= tag.id %>">
        <span>
          <%= tag.name %>
        </span>
        <span class="pull-right">
          <form action="/tag/delete/<%= tag.id %>" method="post">
            <a href="/tag/post/<%= tag.id %>" class="btn btn-warning">Edit</a>
            <input type="submit" class="btn btn-danger" value="Delete", onClick="return confirm('destroy OK?');">
          </form>
        </span>
      </li>
    <% end %>
  </ul>
<% end %>